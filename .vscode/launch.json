    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "module": "tools.train",
            "args": [
                "--config_path",
                "configs/main/config.py",
                "--dataset_path",
                ".data",
            ],
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "presentation": {
                "hidden": false,
                "group": "1. Main Tools",
                "order": 1
            }
        },
        {
            "name": "predict",
            "type": "python",
            "request": "launch",
            "module": "tools.predict",
            "args": [
                "--config_path",
                "configs/main/config.py",
                "--input_path",
                ".data/x_test.npy",
                "--model_path",
                ".data/models/resnet18/202/checkpoints/epoch=20.ckpt",
                "--predict_path",
                ".data/predictions/predictions.npy"
            ],
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "presentation": {
                "hidden": false,
                "group": "1. Main Tools",
                "order": 2
            }
        },
        {
            "name": "evaluate",
            "type": "python",
            "request": "launch",
            "module": "tools.evaluate",
            "args": [
                "--config_path",
                "configs/main/config.py",
                "--input_path",
                ".data/X_val.npy",
                "--data_path",
                ".data/y_val.npy",
                "--predict_path",
                ".data/models/resnet18/235/predictions/predictions.npy",
                "--evaluate_path",
                ".data/models/resnet18/235/evaluations"
            ],
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "presentation": {
                "hidden": false,
                "group": "1. Main Tools",
                "order": 3
            }
        },
        {
            "name": "train + predict + evaluate",
            "type": "python",
            "request": "launch",
            "module": "tools.pipeline",
            "args": [
                "--config_path",
                "configs/main/config.py",
                "--dataset_path",
                ".data",
                "--input_path",
                ".data/X_val.npy",
                "--data_path",
                ".data/y_val.npy",
                "--predict_path",
                "predictions/predictions.npy",
                "--evaluate_path",
                "evaluations",
            ],
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "presentation": {
                "hidden": false,
                "group": "2. Pipelines",
                "order": 4
            }
        },
        {
            "name": "compare plots",
            "type": "python",
            "request": "launch",
            "module": "tools.compare_plots",
            "args": [
                "--root_path",
                ".data/models",
                "--output_path",
                ".data/models/!comparison_plots",
                "--prefix",
                "val",
                "--supported_files",
                "metrics_all.csv, metrics_group_all.csv",
                "--experiments",
                "xresnet18/1, xresnet18/2, xresnet18/3"
            ],
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "presentation": {
                "hidden": false,
                "group": "3. Additional Tools",
                "order": 5
            }
        },
    ]
}